    "version": "0.2.0",
    "configurations": [
        {
            "name": "Flutter Tests",
            "request": "launch",
            "type": "dart",
            "program": "apps/flipper/test/",
            "args": ["--dart-define=FLUTTER_TEST_ENV=true"]
        },
        {
            "name": "LocalFirestore",
            "request": "launch",
            "type": "dart",
            "args": ["--dart-define=EMULATOR_ENABLED=true"]
        },
        
        {
            "name": "flipper",
            "cwd": "apps/flipper",
            "request": "launch",
            "type": "dart",
            // "dart.useLegacyDebugAdapters": true,
            "args": ["--dart-define=TEST_DB=true"]
        },
        {
            "name": "flipper (profile mode)",
            "cwd": "apps/flipper",
            "request": "launch",
            "type": "dart",
            "flutterMode": "profile"
        },
        
       
    ]
}